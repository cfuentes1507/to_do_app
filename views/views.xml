<odoo>
  <data>
<!-- Vista tree -->
    <record model="ir.ui.view" id="view_tree_todo">
      <field name="name">to_do_app.view_tree_todo</field>
      <field name="model">todo.app</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" string="Tarea"/>
          <field name="description" string="Descripcion de Tarea"/>
          <field name="status"/>
        </tree>
      </field>
    </record>
<!-- Vista form -->
    <record model="ir.ui.view" id="view_form_todo">
      <field name="name">to_do_app.view_form_todo</field>
      <field name="model">todo.app</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group string="Datos de la tarea">
              <group>
                <field name="name" string="Tarea"/>
                <field name="description" string="Descripcion de Tarea"/>
              </group>
              <group>
                <field name="status"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

<!-- Action -->
    <record model="ir.actions.act_window" id="to_do_app.action_view_todo">
      <field name="name">Lista de Tareas</field>
      <field name="res_model">todo.app</field>
    </record>
<!-- Menu -->
    <menuitem name="Lista de Tareas" parent="" id="to_do_app.menu" action="to_do_app.action_view_todo"/>

  </data>
</odoo>